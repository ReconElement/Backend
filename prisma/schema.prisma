generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//write the schema 
model User{
  id              String          @id @default(uuid())
  email           String          @unique
  username        String          @unique
  password        String
  name            String
  fund            Float         
  deleted         Boolean     
  existingTrades  ExistingTrade[]
}

model ExistingTrade{
  id             String           @id @default(uuid())
  openPrice      Float
  closePrice     Float            
  leverage       Float
  assetPrice     Float                                 //Stores the price of the individual asset at the time of buying
  pnl            Float
  quantity       Float
  type           TradeType        @default(long)
  asset          Asset            @relation(fields: [assetId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  assetId        Int
  liquidated     Boolean          
  user           User             @relation(fields: [userId], references: [id])
  userId         String
}
//an asset can have multiple existingTrades but an existingTrade cannot have multiple assets
model Asset{
  id              Int           @id @unique
  symbol          String
  imageUrl        String
  name            String
  decimals        Int
  ExistingTrades  ExistingTrade[]
}

enum TradeType {
  long
  short 
}